                        <id>protobuf</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <target>
                                <exec executable="proto/compile.sh" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
